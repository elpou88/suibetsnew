# SuiBets Platform Environment Variables

# Database connection (Optional - falls back to blockchain storage if not provided)
DATABASE_URL=postgres://username:password@hostname:port/database

# API Sports API Key for sports data
API_SPORTS_KEY=your_api_sports_key_here

# SportsData API Key (alternate sports data source)
SPORTSDATA_API_KEY=your_sportsdata_key_here

# Sui blockchain network settings
SUI_NETWORK=testnet
ADMIN_WALLET_ADDRESS=0x14277cecf9d3f819c2ec39e9be93c35fb3bdd85d2fd5f6dcd1fad931aee232e8

# Session and security settings
SESSION_SECRET=sui_bets_platform_session_secret
PASSWORD_SALT=sui_bets_salt_secret

# SBETS token address on Sui
SBETS_TOKEN_ADDRESS=0x6a4d9c0eab7ac40371a7453d1aa6c89b130950e8af6868ba975fdd81371a7285::sbets::SBETS

# Stripe integration (for payment processing)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
VITE_STRIPE_PUBLIC_KEY=your_stripe_public_key_here
STRIPE_PRICE_ID=your_stripe_price_id_here

# Platform settings
PLATFORM_FEE_BETTING=0.00
NETWORK_FEE_BETTING=0.01
PLATFORM_FEE_STAKING=0.02
PLATFORM_FEE_REWARDS=0.10

# Wallet addresses for deposit/withdrawal operations
DEPOSIT_RECEIVER_ADDRESS=0x14277cecf9d3f819c2ec39e9be93c35fb3bdd85d2fd5f6dcd1fad931aee232e8
WITHDRAWAL_PROVIDER_ADDRESS=0xd8e37ef7507b086f1f9f29de543cb2c4e9249e886558a734923aafa4c103658c

# Other configuration
NODE_ENV=production